{
  "name": "@apps/mobile-shell",
  "version": "0.0.1",
  "private": true,
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "run-ios": "expo run:ios",
    "run-android": "expo run:android",
    "build-ios": "cd ios && xcodebuild -workspace MobileShell.xcworkspace -scheme MobileShell -configuration Release",
    "build-android": "cd android && ./gradlew assembleRelease"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.23.1",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/stack": "^6.4.1",
    "@shopify/react-native-skia": "1.5.0",
    "@supabase/supabase-js": "^2.76.1",
    "expo": "52.0.47",
    "expo-asset": "~11.0.5",
    "expo-font": "~13.0.4",
    "expo-splash-screen": "~0.29.24",
    "metro": "^0.81.0",
    "react": "^18.3.1",
    "react-native": "0.76.9",
    "react-native-gesture-handler": "~2.20.2",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-health": "^1.19.0",
    "react-native-health-connect": "^3.4.0",
    "react-native-reanimated": "~3.16.7",
    "react-native-safe-area-context": "4.12.0",
    "react-native-screens": "~4.4.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native-community/cli": "^15.0.0",
    "@react-native-community/cli-platform-ios": "^15.0.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@react-native/babel-preset": "^0.76.6",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.9.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "~12.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "nativewind": "^4.2.1",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.3.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation|react-native-.*|@react-native-.*|expo|expo-.*|@expo|@expo/.*)/)"
    ]
  }
}
